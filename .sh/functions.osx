# Open man page as PDF
manpdf() {
  man -t "$1" | open -f -a /Applications/Preview.app/
}

# Documentation search via Dash.app
# https://kapeli.com/dash
dash() {
  PRINT_DASH_HELP=0  
  case $# in
    1) QUERY="$1";;
    2) QUERY="$1:$2";;
    *) PRINT_DASH_HELP=1;;
  esac
  if [ "$PRINT_DASH_HELP" -ne 0 ] || [ "$QUERY" = "-h" ] || [ "$QUERY" = "--help" ];then
    echo "Usage: dash [docset] query"; return 1;
  fi;
  open "dash://$QUERY"
}
