
[core]
    editor = vim
    excludesfile = ~/.gitignore

[color]
    ui = auto

[push]
    default = current

[credential]
    helper = cache --timeout=3600

[grep]
    lineNumber = true

[branch]
    autosetuprebase = remote

[merge]
    conflictstyle = diff3

[rerere]
    enabled = 0

[commit]
    gpgsign = true

[alias]
    save = commit -a -m "Save: WIP commit"
    str = "!f() { git log -S\"$1\" $2; }; f"

# Allow some extra overrides specific to this install [from separate repo]
 [include]
   path = ~/.gitconfig_extras
